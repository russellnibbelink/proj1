<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<p>Pokemons:</p>
<table class="table">
  <tbody>
    <% @pokemons.each do |pokemon| %>
    <tr>
      <td><p>Name: <%= pokemon.name %></p></td>
      <td><p>Level: <%= pokemon.level %></p></td>
      <td><p>Health: <%= pokemon.health %></p></td>
      <td><%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% if @show_button%>
    <p>Create a new Pokemon:</p>
    <%= link_to "New Pokemon", "/pokemons/new", :class => "button medium" %>
<% end%>
